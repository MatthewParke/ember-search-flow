{{input
	class="search-flow_input"
	value=value
	placeholder=placeholder
	focus-out="inputBlurred"
	focus-in="inputFocused"
	key-down="inputKeyDown"
	key-up="inputKeyUp"
	enter="inputEntered"
}}
{{#if filter.isFocused}}
	{{search-flow/dropdown
		options=availableOptions
		activeOption=activeOption
		isContains=filter.isContains
		selectOption=(action 'selectOption')
	}}
{{/if}}